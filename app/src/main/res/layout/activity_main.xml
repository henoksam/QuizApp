<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="161dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Quiz App"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <CheckBox
        android:id="@+id/c"
        android:layout_width="128dp"
        android:layout_height="27dp"
        android:layout_alignBottom="@+id/tb"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="32dp"
        android:text="Both A and B"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.492" />

    <CheckBox
        android:id="@+id/b"
        android:layout_width="81dp"
        android:layout_height="34dp"
        android:layout_alignBottom="@+id/tb"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:text="Float"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/c"
        app:layout_constraintStart_toEndOf="@+id/a"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <CheckBox
        android:id="@+id/a"
        android:layout_width="86dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/tb"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:text="Short"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.482" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="237dp"
        android:layout_height="188dp"
        android:layout_marginTop="96dp"
        android:layout_toEndOf="@+id/tb"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b">

        <RadioButton
            android:id="@+id/ChoiceA"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="val" />

        <RadioButton
            android:id="@+id/choiceC"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:text="var" />

        <RadioButton
            android:id="@+id/ChoiceB"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="48dp"
            android:layout_weight="1"
            android:text="const" />

    </RadioGroup>

    <Button
        android:id="@+id/submit"
        android:layout_width="229dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:layout_toStartOf="@+id/a"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg" />

    <Button
        android:id="@+id/button2"
        android:layout_width="221dp"
        android:layout_height="39dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submit"
        app:layout_constraintVertical_bias="0.197" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Which is a kotlin Data Type ?Which is a kotlin Data Type ?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:text="Which is a kotlin Data Type ?" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="276dp"
        android:layout_height="44dp"
        android:text="Which type is used for Immutables/ Constants"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/rg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b"
        app:layout_constraintVertical_bias="0.478"
        tools:text="Which type is used for Immutables/ Constants" />

</androidx.constraintlayout.widget.ConstraintLayout>